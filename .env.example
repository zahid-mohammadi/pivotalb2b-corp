# Environment Variables Template for Google Cloud Platform
# Copy this file to .env for local development
# DO NOT commit .env with actual values to version control

# Session Configuration
SESSION_SECRET=your-secure-session-secret-here

# Database Configuration (Neon PostgreSQL or Google Cloud SQL)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
PGDATABASE=your-database-name
PGHOST=your-database-host
PGPORT=5432
PGUSER=your-database-user
PGPASSWORD=your-database-password

# Email Configuration (SMTP)
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Microsoft 365 Integration (Optional)
M365_CLIENT_ID=your-m365-client-id
M365_CLIENT_SECRET=your-m365-client-secret

# Application Configuration
CUSTOM_DOMAIN=your-domain.com
NODE_ENV=production
PORT=8080

# Google Cloud Specific
# These are automatically provided by Google Cloud Platform:
# - GOOGLE_CLOUD_PROJECT (your project ID)
# - GAE_INSTANCE (App Engine instance ID)
# - GAE_SERVICE (service name)
# - GAE_VERSION (version identifier)
